							</control>
						</control>
					</focusedlayout>

				</control>

			</control>

			<!-- Filter -->

			<include>List_Filter</include>

			<control type="group">
				<include>List_Fanart_Diffuse</include>
				<visible>!Skin.HasSetting(Disable_Music_Fanart) + Window.IsVisible(musiclibrary)</visible>
