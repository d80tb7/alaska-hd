								</control>
								<control type="image">
									<posx>19</posx>
									<posy>19</posy>
									<width>118</width>
									<height>118</height>
									<texture diffuse="list/listmatte.png">$INFO[ListItem.Icon]</texture>
									<aspectratio scalediffuse="false">stretch</aspectratio>
