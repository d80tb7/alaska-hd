								<posx>136</posx>
								<posy>4</posy>
								<width>1245</width>
								<height>38</height>
								<aligny>center</aligny>
								<font>Font_ListTitleNF</font>
								<textcolor>ListTitleNF</textcolor>
								<label>$INFO[ListItem.Album]</label>
