								<posx>0</posx>
								<posy>0</posy>
								<width>156</width>
								<height>156</height>
								<texture>$INFO[ListItem.Icon]</texture>
								<animation type="Focus" reversible="false">
									<effect type="zoom" center="78,78" start="50" end="100" time="200" tween="cubic" easing="out" />
