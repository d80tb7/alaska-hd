<?xml version="1.0" encoding="UTF-8"?>
<window id="100">
	<defaultcontrol always="true">10</defaultcontrol>
	<coordinates>
		<origin x="0" y="0"/>
	</coordinates>

	<controls>

		<!-- Default controls (hidden) -->

		<control type="button" id="10">
			<onright>11</onright>
			<include>HiddenControl</include>
			<label>106</label>
		</control>

		<control type="button" id="11">
			<onleft>10</onleft>
			<include>HiddenControl</include>
			<label>107</label>
		</control>

		<!-- Filter -->

		<include>Global_DialogFilter</include>

		<!-- Details -->

		<control type="group" id="5000">
			<posy>Offset_Value</posy>
			<include>Animation_ZoomInMenu</include>
			<animation type="Conditional" condition="Window.IsActive(shutdownmenu) | Window.IsActive(progressdialog) | Window.IsActive(okdialog)">
				<effect type="zoom" time="600" center="960,540" start="100" end="76" tween="cubic" easing="inout" />
			</animation>

			<control type="grouplist">
				<posx>260</posx>
				<posy>340</posy>
				<width>1400</width>
				<height>400</height>
				<itemgap>8</itemgap>
				<align>center</align>
				<orientation>vertical</orientation>

				<!-- Heading -->

				<control type="label" id="1">
					<description>Heading Label</description>
					<width>1400</width>
					<height>42</height>
					<align>center</align>
					<font>Font_Black_Caps_42</font>
					<textcolor>MedLight</textcolor>
				</control>

				<control type="label">
					<description>Spacer</description>
					<width>1400</width>
					<height>8</height>
				</control>

				<control type="label" id="2">
					<width>1400</width>
					<height>44</height>
					<align>center</align>
					<scroll>true</scroll>
					<font>Font_Light_Caps_36</font>
					<textcolor>Medium</textcolor>
					<visible>!IsEmpty(Control.GetLabel(2))</visible>
				</control>

				<control type="label" id="3">
					<width>1400</width>
					<height>44</height>
					<align>center</align>
					<scroll>true</scroll>
					<font>Font_Light_Caps_36</font>
					<textcolor>Medium</textcolor>
					<visible>!IsEmpty(Control.GetLabel(3))</visible>
				</control>

				<control type="label" id="4">
					<width>1400</width>
					<height>44</height>
					<align>center</align>
					<scroll>true</scroll>
					<font>Font_Light_Caps_36</font>
					<textcolor>Medium</textcolor>
					<visible>!IsEmpty(Control.GetLabel(4))</visible>
				</control>

				<control type="label">
					<description>Spacer</description>
					<width>1400</width>
					<height>8</height>
				</control>

				<!-- Menu -->

				<control type="grouplist">
					<width>1400</width>
					<height>76</height>
					<itemgap>80</itemgap>
					<align>center</align>
					<orientation>horizontal</orientation>
					<scrolltime tween="sine" easing="out">320</scrolltime>

					<!-- No -->

					<control type="label">
						<align>right</align>
						<include>DialogMenuValue</include>
						<label>$INFO[Control.GetLabel(10)]</label>
						<visible>Control.IsVisible(10)</visible>
						<animation type="conditional" condition="!Control.HasFocus(10)">
							<effect type="zoom" center="460,38" start="100" end="70" time="200" tween="cubic" easing="in" />
							<effect type="fade" start="100" end="50" time="200" />
						</animation>
					</control>

					<!-- Yes -->

					<control type="label">
						<align>left</align>
						<include>DialogMenuValue</include>
						<label>$INFO[Control.GetLabel(11)]</label>
						<visible>Control.IsVisible(11)</visible>
						<animation type="conditional" condition="!Control.HasFocus(11)">
							<effect type="zoom" center="0,38" start="100" end="70" time="200" tween="cubic" easing="in" />
							<effect type="fade" start="100" end="50" time="200" />
						</animation>
					</control>

				</control>

			</control>

		</control>

	</controls>

</window>