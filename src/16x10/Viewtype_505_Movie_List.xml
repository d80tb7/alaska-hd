<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Viewtype_505_Movie_List">

		<control type="group">

			<visible>Control.IsVisible(505)</visible>

			<!-- Browser -->

			<control type="group" id="5000">
				<posy>Offset_Value</posy>
				<include>Animation_ZoomInZoomOut</include>
				<include>Animation_ZoomedByMenu</include>
				<include>Animation_HiddenByInfo</include>

				<control type="fixedlist" id="505">
					<posx>525</posx>
					<posy>127</posy>
					<height>784</height>
					<width>1330</width>
					<onup>505</onup>
					<ondown>505</ondown>
					<onleft>7000</onleft>
					<onright>7000</onright>
					<preloaditems>2</preloaditems>
					<focusposition>5</focusposition>
					<orientation>vertical</orientation>
					<viewtype label="535">list</viewtype>
					<scrolltime tween="sine" easing="out">320</scrolltime>
					<visible>Container.Content(Movies) | Container.Content(TVShows) | Container.Content(Seasons)</visible>

					<itemlayout width="1328" height="55">
						<control type="label">
							<posx>136</posx>
							<posy>0</posy>
							<width>1194</width>
							<height>55</height>
							<aligny>center</aligny>
							<font>Font_ListTitleNF</font>
							<textcolor>ListTitleNF</textcolor>
							<label>$INFO[ListItem.Label]</label>
							<visible>IsEmpty(ListItem.Title)</visible>
						</control>
						<control type="group">
							<visible>!IsEmpty(ListItem.Title)</visible>
							<control type="label">
								<posx>136</posx>
								<posy>0</posy>
								<width>1194</width>
								<height>55</height>
								<aligny>center</aligny>
								<font>Font_ListTitleNF</font>
								<textcolor>ListTitleNF</textcolor>
								<label>$INFO[ListItem.Title]</label>
								<visible>Skin.HasSetting(HideWatchedOverlays) | !stringcompare(ListItem.Overlay,OverlayWatched.png)</visible>
							</control>
							<control type="label">
								<posx>136</posx>
								<posy>0</posy>
								<width>1194</width>
								<height>55</height>
								<aligny>center</aligny>
								<font>Font_ListTitleNF</font>
								<textcolor>ListTitleNF</textcolor>
								<label>$INFO[ListItem.Title]  [COLOR=WatchedTick]â€¡[/COLOR]</label>
								<visible>!Skin.HasSetting(HideWatchedOverlays) + stringcompare(ListItem.Overlay,OverlayWatched.png)</visible>
							</control>
						</control>						
					</itemlayout>

					<focusedlayout width="1242" height="214">
						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>156</width>
							<height>214</height>
							<texture>$INFO[ListItem.Icon]</texture>
							<animation type="Focus" reversible="false">
								<effect type="zoom" center="78,107" start="50" end="100" time="200" tween="cubic" easing="out" />
								<effect type="fade" start="0" end="100" time="200" />
							</animation>
							<visible>SubString(ListItem.Icon,Default)</visible>
						</control>
						<control type="group">
							<visible>!SubString(ListItem.Icon,Default)</visible>
							<animation type="Focus" reversible="false">
								<effect type="zoom" center="78,107" start="50" end="100" time="200" tween="cubic" easing="out" />
								<effect type="fade" start="0" end="100" time="200" />
							</animation>
							<control type="image">
								<posx>0</posx>
								<posy>0</posy>
								<width>156</width>
								<height>214</height>
								<texture>list/listframe_poster.png</texture>
							</control>
							<control type="image">
								<posx>19</posx>
								<posy>19</posy>
								<width>118</width>
								<height>176</height>
								<texture background="true" diffuse="list/listmatte_poster.png">$INFO[ListItem.Icon]</texture>
								<aspectratio scalediffuse="false">stretch</aspectratio>
							</control>
							<control type="image">
								<posx>103</posx>
								<posy>162</posy>
								<width>34</width>
								<height>34</height>
								<texture>$INFO[ListItem.Overlay]</texture>
								<visible>!Skin.HasSetting(HideWatchedOverlays)</visible>
							</control>
						</control>
						<control type="label">
							<posx>180</posx>
							<posy>0</posy>
							<width>1150</width>
							<height>214</height>
							<aligny>center</aligny>
							<font>Font_ListTitleBig</font>
							<textcolor>ListTitleF</textcolor>
							<label>$INFO[ListItem.Label]</label>
							<visible>IsEmpty(ListItem.Title)</visible>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="200" />
							</animation>
						</control>
						<control type="group">
							<visible>!IsEmpty(ListItem.Title)</visible>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="200" />
							</animation>
							<animation effect="slide" end="0,22" condition="IsEmpty(ListItem.Rating)">Conditional</animation>
							<animation effect="slide" end="0,18" condition="IsEmpty(ListItem.Genre) + !SubString(ListItem.Path,videodb://1/7)">Conditional</animation>
							<control type="label">
								<posx>180</posx>
								<posy>48</posy>
								<width>1150</width>
								<height>38</height>
								<aligny>center</aligny>
								<font>Font_ListTitleBig</font>
								<textcolor>ListTitleF</textcolor>
								<label>$INFO[ListItem.Title]</label>
							</control>
							<control type="label">
								<posx>180</posx>
								<posy>94</posy>
								<width>1150</width>
								<height>26</height>
								<aligny>center</aligny>
								<font>Font_ListDetail</font>
								<textcolor>ListTitleF</textcolor>
								<label>$INFO[ListItem.Genre]</label>
							</control>
							<control type="label">
								<posx>180</posx>
								<posy>94</posy>
								<width>1150</width>
								<height>26</height>
								<aligny>center</aligny>
								<font>Font_ListDetail</font>
								<textcolor>ListTitleF</textcolor>
								<label>31140</label>
								<visible>SubString(ListItem.Path,videodb://1/7)</visible>
							</control>
							<control type="image">
								<posx>180</posx>
								<posy>128</posy>
								<width>182</width>
								<height>33</height>
								<texture>$INFO[ListItem.StarRating]</texture>
								<visible>!IsEmpty(ListItem.Rating)</visible>
							</control>
						</control>
					</focusedlayout>

				</control>

			</control>

			<!-- Filter -->

			<include>Video_List_Filter</include>

			<control type="group">
				<include>List_Fanart_Diffuse</include>
				<visible>[!Skin.HasSetting(Disable_Movie_Fanart) + Container.Content(Movies)] | [!Skin.HasSetting(Disable_TV_Fanart) + [Container.Content(TVShows) | Container.Content(Seasons)]] | [!Skin.HasSetting(Disable_Addon_Fanart) + Container.Content(Addons)]</visible>
			</control>

			<!-- Media flags -->

			<control type="group">
				<posy>Offset_Value</posy>
				<include>Animation_SlideUpFadeOut</include>
				<include>Animation_HiddenByInfo</include>
				<include>Animation_ZoomedByMenu</include>
				<control type="group">
					<posx>1246</posx>
					<posy>822</posy>
					<include condition="SubString(Container.FolderPath,videodb://)">VideoMediaFlags</include>
				</control>
			</control>

		</control>

	</include>

</includes>
