<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Viewtype_506_Episode_List">

		<control type="group">

			<visible>Control.IsVisible(506)</visible>

			<!-- Browser -->

			<control type="group" id="5000">
				<posy>Offset_Value</posy>
				<include>Animation_ZoomInZoomOut</include>
				<include>Animation_ZoomedByMenu</include>
				<include>Animation_HiddenByInfo</include>

				<control type="fixedlist" id="506">
					<posx>467</posx>
					<posy>136</posy>
					<height>764</height>
					<width>1388</width>
					<onup>506</onup>
					<ondown>506</ondown>
					<onleft>7000</onleft>
					<onright>7000</onright>
					<focusposition>5</focusposition>
					<orientation>vertical</orientation>
					<viewtype label="535">list</viewtype>
					<scrolltime tween="sine" easing="out">320</scrolltime>
					<visible>Container.Content(Episodes)</visible>

					<itemlayout width="1328" height="61">
						<control type="label">
							<posx>166</posx>
							<posy>0</posy>
							<width>1245</width>
							<height>61</height>
							<aligny>center</aligny>
							<font>Font_ListTitleNF</font>
							<textcolor>ListTitleNF</textcolor>
							<label>$INFO[ListItem.Label]</label>
							<visible>IsEmpty(ListItem.Episode)</visible>
						</control>
						<control type="group">
							<visible>!IsEmpty(ListItem.Episode)</visible>
							<control type="label">
								<posx>166</posx>
								<posy>0</posy>
								<width>1245</width>
								<height>61</height>
								<aligny>center</aligny>
								<font>Font_ListTitleNF</font>
								<textcolor>ListTitleNF</textcolor>
								<label>$INFO[ListItem.Episode,,. ]$INFO[ListItem.Title]</label>
								<visible>Skin.HasSetting(HideWatchedOverlays) | !stringcompare(ListItem.Overlay,OverlayWatched.png)</visible>
							</control>
							<control type="label">
								<posx>166</posx>
								<posy>0</posy>
								<width>1245</width>
								<height>61</height>
								<aligny>center</aligny>
								<font>Font_ListTitleNF</font>
								<textcolor>ListTitleNF</textcolor>
								<label>$INFO[ListItem.Episode,,. ]$INFO[ListItem.Title]  [COLOR=WatchedTick]â€¡[/COLOR]</label>
								<visible>!Skin.HasSetting(HideWatchedOverlays) + stringcompare(ListItem.Overlay,OverlayWatched.png)</visible>
							</control>
						</control>
					</itemlayout>

					<focusedlayout width="1242" height="156">
						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>214</width>
							<height>156</height>
							<texture>$INFO[ListItem.Icon]</texture>
							<animation type="Focus" reversible="false">
								<effect type="zoom" center="107,78" start="50" end="100" time="200" tween="cubic" easing="out" />
								<effect type="fade" start="0" end="100" time="200" />
							</animation>
							<visible>SubString(ListItem.Icon,Default)</visible>
						</control>
						<control type="group">
							<visible>!SubString(ListItem.Icon,Default)</visible>
							<animation type="Focus" reversible="false">
								<effect type="zoom" center="107,78" start="50" end="100" time="200" tween="cubic" easing="out" />
								<effect type="fade" start="0" end="100" time="200" />
							</animation>
							<control type="image">
								<posx>0</posx>
								<posy>0</posy>
								<width>214</width>
								<height>156</height>
								<texture>list/listframe_episode.png</texture>
							</control>
							<control type="image">
								<posx>19</posx>
								<posy>19</posy>
								<width>176</width>
								<height>118</height>
								<texture diffuse="list/listmatte_episode.png">$INFO[ListItem.Icon]</texture>
								<aspectratio scalediffuse="false">scale</aspectratio>
							</control>
							<control type="image">
								<posx>161</posx>
								<posy>104</posy>
								<width>34</width>
								<height>34</height>
								<texture>$INFO[ListItem.Overlay]</texture>
								<visible>!Skin.HasSetting(HideWatchedOverlays)</visible>
							</control>
						</control>
						<control type="group">
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="200" />
							</animation>
							<control type="label">
								<posx>238</posx>
								<posy>42</posy>
								<width>1150</width>
								<height>38</height>
								<aligny>center</aligny>
								<font>Font_ListTitleBig</font>
								<textcolor>ListTitleF</textcolor>
								<label>$INFO[ListItem.Label]</label>
								<visible>IsEmpty(ListItem.Episode)</visible>
								<animation effect="slide" end="0,14" condition="IsEmpty(ListItem.Date) + IsEmpty(ListItem.Duration)">Conditional</animation>
							</control>
							<control type="label">
								<posx>238</posx>
								<posy>42</posy>
								<width>1150</width>
								<height>38</height>
								<aligny>center</aligny>
								<font>Font_ListTitle</font>
								<textcolor>ListTitleF</textcolor>
								<label>$INFO[ListItem.Episode,,. ]$INFO[ListItem.Title]</label>
								<visible>!IsEmpty(ListItem.Episode)</visible>
								<animation effect="slide" end="0,14" condition="IsEmpty(ListItem.Date) + IsEmpty(ListItem.Duration)">Conditional</animation>
							</control>
							<control type="label">
								<posx>238</posx>
								<posy>81</posy>
								<width>1150</width>
								<height>26</height>
								<aligny>center</aligny>
								<font>Font_ListDetail</font>
								<textcolor>ListTitleF</textcolor>
								<label>$VAR[Date_Prefix]$INFO[ListItem.Date]$VAR[Episode_Insert]$INFO[ListItem.Duration,, $LOCALIZE[31118]]</label>
							</control>
						</control>
					</focusedlayout>

				</control>

			</control>

			<!-- Filter -->

			<include>Video_List_Filter</include>

			<control type="group">
				<include>List_Fanart_Diffuse</include>
				<visible>!Skin.HasSetting(Disable_TV_Fanart) + Container.Content(Episodes)</visible>
			</control>

			<!-- Media flags -->

			<control type="group">
				<posy>Offset_Value</posy>
				<include>Animation_SlideUpFadeOut</include>
				<include>Animation_HiddenByInfo</include>
				<include>Animation_ZoomedByMenu</include>
				<control type="group">
					<posx>1246</posx>
					<posy>822</posy>
					<include condition="SubString(Container.FolderPath,videodb://)">VideoMediaFlags</include>
				</control>
			</control>

		</control>

	</include>

</includes>
