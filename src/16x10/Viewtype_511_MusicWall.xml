<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Viewtype_511_MusicWall">

		<control type="group">
			<visible>Control.IsVisible(511)</visible>

			<!-- Browser -->

			<control type="group" id="5000">
				<posy>Offset_Value</posy>
				<include>Animation_ZoomInZoomOut</include>
				<include>Animation_ZoomedByMenu</include>
				<include>Animation_MusicWallFloat</include>

				<control type="panel" id="511">
					<viewtype label="31121">icon</viewtype>
					<posx>-47</posx>
					<posy>292</posy>
					<width>2014</width>
					<height>1008</height>
					<onup>7000</onup>
					<ondown>7000</ondown>
					<pagecontrol>61</pagecontrol>
					<preloaditems>2</preloaditems>
					<orientation>horizontal</orientation>
					<scrolltime tween="sine" easing="out">320</scrolltime>

					<itemlayout width="336" height="336">
						<control type="image">
							<posx>194</posx>
							<posy>26</posy>
							<width>285</width>
							<height>285</height>
							<colordiffuse>MatteDiffuse</colordiffuse>
							<texture>wall/musicwallmatte.png</texture>
						</control>
						<control type="image">
							<posx>194</posx>
							<posy>26</posy>
							<width>285</width>
							<height>285</height>
							<fadetime>200</fadetime>
							<texture background="true" diffuse="wall/musicwallmatte.png">$INFO[ListItem.Thumb]</texture>
							<colordiffuse>MusicWallDiffuse</colordiffuse>
							<aspectratio scalediffuse="false">stretch</aspectratio>
						</control>
						<control type="image">
							<posx>192</posx>
							<posy>24</posy>
							<width>289</width>
							<height>289</height>
							<texture>wall/musicwallframeNF.png</texture>
							<colordiffuse>MusicWallDiffuse</colordiffuse>
						</control>
					</itemlayout>

					<focusedlayout width="336" height="336">
						<control type="image">
							<posx>194</posx>
							<posy>26</posy>
							<width>285</width>
							<height>285</height>
							<colordiffuse>MatteDiffuse</colordiffuse>
							<texture>wall/musicwallmatte.png</texture>
							<animation type="Focus" reversible="false" condition="Container(511).Row(0)">
								<effect type="slide" start="0,0" end="0,-20" time="400" tween="back" easing="out" />
							</animation>
							<animation type="Focus" reversible="false" condition="Container(511).Row(2)">
								<effect type="slide" start="0,0" end="0,20" time="400" tween="back" easing="out" />
							</animation>
						</control>
						<control type="image">
							<posx>194</posx>
							<posy>26</posy>
							<width>285</width>
							<height>285</height>
							<fadetime>200</fadetime>
							<texture background="true" diffuse="wall/musicwallmatte.png">$INFO[ListItem.Thumb]</texture>
							<animation type="Focus" reversible="false" condition="Container(511).Row(0)">
								<effect type="fade" start="20" end="100" time="200" />
								<effect type="slide" start="0,0" end="0,-20" time="400" tween="back" easing="out" />
							</animation>
							<animation type="Focus" reversible="false" condition="Container(511).Row(1)">
								<effect type="fade" start="20" end="100" time="200" />
							</animation>
							<animation type="Focus" reversible="false" condition="Container(511).Row(2)">
								<effect type="fade" start="20" end="100" time="200" />
								<effect type="slide" start="0,0" end="0,20" time="400" tween="back" easing="out" />
							</animation>
							<aspectratio scalediffuse="false">stretch</aspectratio>
						</control>
						<control type="image">
							<posx>194</posx>
							<posy>26</posy>
							<width>285</width>
							<height>285</height>
							<texture>wall/musicwallframeNF.png</texture>
							<colordiffuse>48FFFFFF</colordiffuse>
							<animation type="Focus" reversible="false" condition="Container(511).Row(0)">
								<effect type="fade" start="100" end="0" time="200" />
								<effect type="slide" start="0,0" end="0,-20" time="400" tween="back" easing="out" />
							</animation>
							<animation type="Focus" reversible="false" condition="Container(511).Row(1)">
								<effect type="fade" start="100" end="0" time="200" />
							</animation>
							<animation type="Focus" reversible="false" condition="Container(511).Row(2)">
								<effect type="fade" start="100" end="0" time="200" />
								<effect type="slide" start="0,0" end="0,20" time="400" tween="back" easing="out" />
							</animation>
						</control>
						<control type="image">
							<posx>168</posx>
							<posy>0</posy>
							<width>335</width>
							<height>335</height>
							<texture>wall/musicwallframeF.png</texture>
							<animation type="Focus" reversible="false" condition="Container(511).Row(0)">
								<effect type="fade" start="0" end="100" time="400" />
								<effect type="slide" start="0,0" end="0,-20" time="400" tween="back" easing="out" />
							</animation>
							<animation type="Focus" reversible="false" condition="Container(511).Row(1)">
								<effect type="fade" start="0" end="100" time="400" />
							</animation>
							<animation type="Focus" reversible="false" condition="Container(511).Row(2)">
								<effect type="fade" start="0" end="100" time="400" />
								<effect type="slide" start="0,0" end="0,20" time="400" tween="back" easing="out" />
							</animation>
						</control>
					</focusedlayout>

				</control>

			</control>

			<!-- Filter -->

			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<texture diffuse="special://skin/backgrounds/wall_filter.png">$VAR[backgroundimage]</texture>
			</control>

			<!-- Next/Previous page arrows -->

			<control type="group">
				<posy>Offset_Value</posy>
				<include>Animation_ZoomInZoomOut</include>
				<include>Animation_ZoomedByMenu</include>
				<include>Animation_MusicWallArrowFloat</include>

				<control type="image">
					<posx>28</posx>
					<posy>440</posy>
					<width>40</width>
					<height>40</height>
					<texture flipx="true">pics/picsarrow.png</texture>
					<visible>Container(511).HasPrevious</visible>
					<animation type="Conditional" reversible="false" condition="!Container(511).OnPrevious">
						<effect type="zoom" center="auto" start="74" end="100" time="200" delay="80" tween="back" easing="out" />
					</animation>
				</control>

				<control type="image">
					<posx>1852</posx>
					<posy>440</posy>
					<width>40</width>
					<height>40</height>
					<texture>pics/picsarrow.png</texture>
					<visible>Container(511).HasNext</visible>
					<animation type="Conditional" reversible="false" condition="!Container(511).OnNext">
						<effect type="zoom" center="auto" start="74" end="100" time="200" delay="80" tween="back" easing="out" />
					</animation>
				</control>

			</control>

		</control>

	</include>

</includes>
